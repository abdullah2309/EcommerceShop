@model EcommerceShop.Models.addsaleproduct
@{
    ViewData["Title"] = "Add_Product";
    Layout = "_Admin_Layout";
}

<div class="content-body">
    <div class="container-fluid">

        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Boost Your Sales – Add New Sale Products in Just a Click!</h4>
                </div>
            </div>
        </div>

        <!-- Button to Trigger Modal -->
        <div class="container mt-5">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#productModal">
                Add Sale Product
            </button>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h5 class="modal-title" id="productModalLabel">Add Product Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <!-- Modal Body -->
                    <div class="modal-body">
                        <form method="post" enctype="multipart/form-data" asp-controller="adminaddsaleproduct" asp-action="Index">

                            <div class="mb-3">
                                <label for="productName" class="form-label">Product Name</label>
                                <input type="text" class="form-control" asp-for="Product_Name" id="productName" placeholder="Enter Product Name (e.g., Greeting Card)" required>
                            </div>


                            <div class="mb-3">
                                <label for="productPrice" class="form-label">Product Price</label>
                                <input type="number" class="form-control" asp-for="Product_Price" id="productPrice" placeholder="Enter Product Price (e.g., 5.00)" step="0.01" required>
                            </div>


                            <div class="mb-3">
                                <label for="productDetails" class="form-label">Product Details</label>
                                <textarea class="form-control" asp-for="Product_Details" id="productDetails" rows="4" placeholder="Enter Product Details (e.g., Handmade greeting card with floral design)" required></textarea>
                            </div>


                            <div class="mb-3">
                                <label for="productDetails" class="form-label">Product Images</label>
                                <input type="file" class="form-control" asp-for="Product_Images" placeholder="Enter Product Image" step="0.01" required>


                            </div>

                            <div class="mb-3">
                                <label for="productDetails" class="form-label">Category List</label>
                                <select asp-for="category_list" class="form-control" asp-items="ViewBag.category_name"></select>
                            </div>

                            <!-- Modal Footer -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Add Product</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />

        @Html.Partial("_ShowSaleProduct", ViewData["addsaleproduct"]);


    </div>
</div>